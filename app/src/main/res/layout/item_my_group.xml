<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_my_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_my_group"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/selector_btn_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_group_name"
            style="@style/TextView.Body.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/iv_my_group"
            app:layout_constraintStart_toStartOf="@id/iv_my_group"
            app:layout_constraintTop_toBottomOf="@id/iv_my_group"
            tools:text="Group" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>