<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_friend_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/shape_f0f1f3_oval_f6f7f9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_friend_name"
            style="@style/TextView.Title.14.Sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/tv_friend_group"
            app:layout_constraintStart_toEndOf="@id/iv_friend_image"
            app:layout_constraintTop_toTopOf="@id/iv_friend_image"
            tools:text="User" />

        <TextView
            android:id="@+id/tv_friend_group"
            style="@style/TextView.Body.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_friend_image"
            app:layout_constraintStart_toStartOf="@id/tv_friend_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_friend_name"
            tools:text="Group" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dots_three_vertical"
            app:layout_constraintBottom_toBottomOf="@id/iv_friend_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_friend_image" />

        <TextView
            android:id="@+id/tv_friend_post"
            style="@style/TextView.Body.14.R"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/iv_friend_image"
            tools:text="피드의 글 미리 보기는 네줄까지 보이고 이후는 점으로 대체됩니다. 피드의 글 미리 보기는 네줄까지 보이고 이후는 점으로 대체됩니다. 피드의 글 미리 보기는 네줄까지 보이고 이후는 점으로 대체됩니다. 피드의 글 미리 보기는 네줄까지 보이고 이후는 점으로 대체됩니다." />

        <ImageView
            android:id="@+id/iv_friend_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/shape_f0f1f3_radius_16_f6f7f9"
            app:layout_constraintTop_toBottomOf="@id/tv_friend_post" />

        <ImageView
            android:id="@+id/iv_post_image_count"
            android:layout_width="46dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:src="@drawable/shape_80000000_radius_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_friend_post_image" />

        <TextView
            android:id="@+id/tv_post_image_count"
            style="@style/TextView.Caption.10.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/iv_post_image_count"
            app:layout_constraintEnd_toStartOf="@id/tv_post_slash"
            app:layout_constraintTop_toTopOf="@id/iv_post_image_count"
            tools:text="N" />

        <TextView
            android:id="@+id/tv_post_slash"
            style="@style/TextView.Caption.10.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/iv_post_image_count"
            app:layout_constraintStart_toStartOf="@id/iv_post_image_count"
            app:layout_constraintTop_toTopOf="@id/tv_post_image_count"
            tools:text="/" />

        <TextView
            android:id="@+id/tv_post_image_all_count"
            style="@style/TextView.Caption.10.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/tv_post_slash"
            app:layout_constraintTop_toTopOf="@id/tv_post_image_count"
            tools:text="N" />

        <ImageView
            android:id="@+id/iv_emotion"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="12.5dp"
            android:src="@drawable/shape_f0f1f3_oval_f6f7f9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_friend_post_image" />

        <TextView
            android:id="@+id/tv_emotion_count"
            style="@style/TextView.Body.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/color_9da1a6"
            app:layout_constraintBottom_toBottomOf="@id/iv_emotion"
            app:layout_constraintStart_toEndOf="@id/iv_emotion"
            app:layout_constraintTop_toTopOf="@id/iv_emotion"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_comment"
            style="@style/TextView.Body.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/home_item_post_comment"
            android:textColor="@color/color_9da1a6"
            app:layout_constraintStart_toEndOf="@id/tv_emotion_count"
            app:layout_constraintTop_toTopOf="@id/iv_emotion" />

        <TextView
            android:id="@+id/tv_comment_count"
            style="@style/TextView.Body.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/color_9da1a6"
            app:layout_constraintBottom_toBottomOf="@id/tv_comment"
            app:layout_constraintStart_toEndOf="@id/tv_comment"
            app:layout_constraintTop_toTopOf="@id/tv_comment"
            tools:text="N" />

        <TextView
            android:id="@+id/tv_hit_count"
            style="@style/TextView.Body.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9da1a6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_comment_count"
            tools:text="N" />

        <TextView
            android:id="@+id/tv_hit"
            style="@style/TextView.Body.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/home_item_post_hit"
            android:textColor="@color/color_9da1a6"
            app:layout_constraintEnd_toStartOf="@id/tv_hit_count"
            app:layout_constraintTop_toTopOf="@id/tv_comment" />

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/shape_e0e2e5_oval"
            app:layout_constraintBottom_toBottomOf="@id/tv_hit"
            app:layout_constraintEnd_toStartOf="@id/tv_hit"
            app:layout_constraintTop_toTopOf="@id/tv_hit" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/TextView.Body.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4.5dp"
            android:textColor="@color/color_9da1a6"
            app:layout_constraintBottom_toBottomOf="@id/tv_hit"
            app:layout_constraintEnd_toStartOf="@id/iv_dot"
            app:layout_constraintTop_toTopOf="@id/tv_hit"
            tools:text="HH:MM" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_emotion"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@id/layout_comment_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_post">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@id/layout_emotion"
            app:layout_constraintStart_toStartOf="@id/layout_emotion">

            <ImageView
                android:id="@+id/iv_emotion_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_emotion"
                app:layout_constraintBottom_toBottomOf="@id/tv_emotion_button"
                app:layout_constraintEnd_toStartOf="@id/tv_emotion_button"
                app:layout_constraintTop_toTopOf="@id/tv_emotion_button" />

            <TextView
                android:id="@+id/tv_emotion_button"
                style="@style/TextView.Body.12.R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/home_item_post_emotion_button"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_emotion_button"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_comment_write"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_emotion"
        app:layout_constraintTop_toBottomOf="@id/layout_post">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@id/layout_comment_write"
            app:layout_constraintStart_toStartOf="@id/layout_comment_write">

            <ImageView
                android:id="@+id/iv_comment_write_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_write"
                app:layout_constraintBottom_toBottomOf="@id/tv_comment_write_button"
                app:layout_constraintEnd_toStartOf="@id/tv_comment_write_button"
                app:layout_constraintTop_toTopOf="@id/tv_comment_write_button" />

            <TextView
                android:id="@+id/tv_comment_write_button"
                style="@style/TextView.Body.12.R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/home_item_post_comment_write_button"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_comment_write_button"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>