<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray100_radius_8">

        <TextView
            android:id="@+id/tv_noMission_title"
            style="@style/TextView.Title.14.Sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/no_mission_title"
            android:textColor="@color/gray900"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:src="@drawable/img_happy_face"
            app:layout_constraintBottom_toBottomOf="@id/tv_noMission_title"
            app:layout_constraintStart_toEndOf="@id/tv_noMission_title"
            app:layout_constraintTop_toTopOf="@id/tv_noMission_title" />

        <TextView
            android:id="@+id/tv_noMission_content"
            style="@style/TextView.Caption.12.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/no_mission_content"
            android:textAlignment="center"
            android:textColor="@color/gray400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_noMission_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accessGroup_create_missionBtn"
            style="@style/MaterialButton.8.12.Sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            android:paddingVertical="8dp"
            android:text="@string/no_mission_button"
            app:icon="@drawable/ic_oval_plus_18"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_noMission_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>